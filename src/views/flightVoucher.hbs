<div style="margin:40px; font-family: Helvetica, sans-serif; line-height: 25px; color: #333">
  <style>
    .container {
      font-size: 14px;
    }

    .d-flex {
      display: flex,
    }

    .flex-column {
      flex-direction: column
    }

    .table {
      width: 100%;
      max-width: 100%;
      margin-bottom: 20px;
    }

    .header {
      font-size: 18px;
      font-weight: bold;
      color: #5badce;
    }

    .header_main {
      display: flex;
      justify-content: space-between;
      border-bottom: 1px solid #d8d8d8;
      padding-bottom: 10px;
      margin: -40px 0 40px;
    }

    #logo_container {
      width: 160px;
      height: 50px;
    }

    #logo {
      width: 100%;
      height: 100%;
      background: transparent;
    }

    .table {
      font-size: 14px;
    }

    .table tr th {
      text-align: left;
    }

    .voucher_header_content {}

    .journey_details {
      display: flex;
      justify-content: space-between;
      margin-bottom: 20px;
      border-bottom: 1px solid #ccc;
    }

    .journey_details .airline {
      font-size: 14px;
      font-weight: bold;
    }

    .departure_details {
      font-size: 14px;
    }

    .arr_dep_seprator {
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .separator {
      width: :50px;
      height: 2px;
      background-color: #222;
    }

    .arrival_details {
      font-size: 14px;
    }

    .arrival_details .date,
    .departure_details .date {
      font-size: 12px;
      font-weight: bold;
    }

    .passenger_details {
      font-size: 14px;
    }

    .flight_inclusion {}

    .baggage_info {}

    .fare_details {
      font-size: 14px;
    }

    .cancellation_charges {
      font-size: 14px;
    }

    .terms_and_conditions {
      font-size: 12px;
    }

    .contact_information {}
  </style>
  <div class="container">
    <div class="header_main">
      <div id="logo_container">
        <img id="logo" src="{{logoUrl}}" alt="logo">
      </div>
      <div>
        <div class="booking_status">
          Booking Confirm
        </div>
        <div>
          {{bookingDate}}
        </div>
      </div>
    </div>

    <div class="voucher_header_content">
      <p>
        Your flight ticket for {{departureCode}}-{{arrivalCode}} is confirm. Your ticket is attached along with the
        email.
      </p>
      <p>
        Your Booking ID is {{bookingId}} . Please use it for any further communication with us.
      </p>
    </div>

    {{#each flightSegments}}
    <div class="journey_details">
      <div class="airline">
        {{this.airlineName}}
      </div>
      <div class="d-flex flex-column">
        <div>
          {{this.airlineName}}
        </div>
        <div style="font-weight:bold">
          {{this.airlineId}}-{{this.flightNo}}
        </div>
      </div>
      <div class="departure_details">
        <div class="d-flex flex-column">
          <div>
            {{this.departure.airportCode}} {{this.departure.time}}
          </div>
          <div class="date">
            {{this.departure.date}}
          </div>
          {{!-- <div>
            terminal 2
          </div> --}}
        </div>
      </div>
      <div class="arr_dep_seprator">
        <div class="separator">

        </div>
        <div class="journey_duration">
          {{this.duration}}
        </div>
      </div>
      <div class="arrival_details">
        <div class="d-flex flex-column">
          <div>
            {{this.arrival.airportCode}} {{this.arrival.time}}
          </div>
          <div class="date">
            {{this.arrival.date}}
          </div>
          {{!-- <div>
            terminal 1
          </div> --}}
        </div>
      </div>
    </div>

    {{/each}}

    <div class="passenger_details">
      <div class="header">
        Passengers - 2 Adults
      </div>
      <div class="body">
        <table class="table">
          <thead>
            <tr>
              <th>Passenger</th>
              <th>Status</th>
              <th>Sector</th>
              <th>PNR</th>
              <th>Ticket Number</th>
              <th>Seat No</th>
            </tr>
          </thead>
          <tbody>
            {{#each passengers}}
            <tr>
              <td>{{this.firstName}} {{this.lastName}}</td>
              <td>Confirm</td>
              <td>--</td>
              <td>{{../PNR}}</td>
              <td>{{this.ticketDocNbr}}</td>
              <td>-</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>

    <div class="flight_inclusion">
      <div class="header">
        Flight Inclusion
      </div>
      <div class="body">
        <table class="table">
          <thead>
            <tr>
              <th>Passenger</th>
              <th>Sector</th>
              <th>Flight Insurance Status</th>
              <th>Meal Type</th>
            </tr>
          </thead>
          <tbody>
            {{#each passengers}}
            <tr>
              <td>{{this.firstName}} {{this.lastName}}</td>
              <td>--</td>
              <td>Not Confirmed</td>
              <td>Not Confirmed</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>

    {{!-- <div class="baggage_info">
      <div class="header">
        Baggage Info
      </div>
      <div>
        <table class="table">
          <thead>
            <tr>
              <th>Airline</th>
              <th>Sector</th>
              <th>Baggage (Check in)</th>
              <th>Baggage (Cabin)</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>{{airlineId}}</td>
              <td>{{departureCode}}-{{arrivalCode}}</td>
              <td>15KG</td>
              <td>7KG</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div> --}}

    <div class="fare_details">
      <div class="header">
        Fare Details
      </div>
      <div class="body">
        <table class="table">
          <thead>
            <tr style="font-weight: bold;">
              <td>Detail</td>
              <td>Amount (INR)</td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Total Basic Fare : </td>
              <td>Rs. {{baseAmount}}</td>
            </tr>
            <tr>
              <td>Other Charges : </td>
              <td>Rs. {{totalTaxes}}</td>
            </tr>
            <tr>
              <td>Discount : </td>
              <td>Rs. 0.00</td>
            </tr>
            <tr>
              <td>Insurance Fee : </td>
              <td>Rs. 0.00</td>
            </tr>
            <tr>
              <td>Meal Amount : </td>
              <td>Rs. 0.00</td>
            </tr>
            <tr>
              <td>Bagg. Amount : </td>
              <td>Rs. 0.00</td>
            </tr>
            <tr>
              <td>Seat. Amount : </td>
              <td>Rs. 0.00</td>
            </tr>
            <tr>
              <td>Reschedule Charges : </td>
              <td>Rs. 0.00</td>
            </tr>
            <tr>
              <td>Cancellation Ins Charges : </td>
              <td>Rs. 0.00</td>
            </tr>
            <tr>
              <th>Total</th>
              <th>Rs. {{totalAmount}}</th>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="cancellation_charges">
      <div class="header">
        Cancellation Charges
      </div>
      <strong>TripBazaar Fee:</strong> Rs. 250 per pax per sector.

      <strong>Airline Fee:</strong>
      <div class="body">
        <table class="table">
          <thead>
            <tr>
              <th>Airline</th>
              <th>Cancellation Time</th>
              <th>Charges</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>-</td>
              <td>Before 6 hours - 72 hours of departure</td>
              <td>- (per pax per sector)</td>
            </tr>
            <tr>
              <td>-</td>
              <td>Before 72 hours - 8760 hours of departure</td>
              <td>- (per pax per sector)</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

