# Production Environment Configuration for TripBazaar B2C Frontend
# ==============================================================
# Copy this file to .env.production and update the values

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=TripBazaar
NEXT_PUBLIC_APP_VERSION=1.0.0

# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://api.tripbazaar.in
NEXT_PUBLIC_API_TIMEOUT=30000

# External APIs
NEXT_PUBLIC_HOTEL_API_URL=https://api.hotels.com/v1
NEXT_PUBLIC_FLIGHT_API_URL=https://api.flights.com/v1

# Payment Gateway Configuration
NEXT_PUBLIC_PAYMENT_GATEWAY=ccavenue
NEXT_PUBLIC_PAYMENT_URL=https://test.ccavenue.com/transaction/transaction.do?command=initiateTransaction

# Analytics and Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
NEXT_PUBLIC_GOOGLE_TAG_MANAGER_ID=GTM_ID
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# Social Media and Marketing
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id

# Image Optimization
NEXT_PUBLIC_IMAGE_DOMAIN=tripbazaar.in
NEXT_PUBLIC_IMAGE_DOMAIN_CDN=images.tripbazaar.in

# Feature Flags
NEXT_PUBLIC_ENABLE_CHAT_SUPPORT=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# SEO Configuration
NEXT_PUBLIC_SITE_URL=https://tripbazaar.in
NEXT_PUBLIC_SITE_NAME=TripBazaar
NEXT_PUBLIC_SITE_DESCRIPTION=Your trusted travel partner for flights, hotels, and holiday packages
NEXT_PUBLIC_SITE_KEYWORDS=travel,hotels,flights,holiday packages,booking

# Contact Information
NEXT_PUBLIC_CONTACT_PHONE=+91 98765 43210
NEXT_PUBLIC_CONTACT_EMAIL=support@tripbazaar.in
NEXT_PUBLIC_SUPPORT_EMAIL=support@tripbazaar.in

# Business Configuration
NEXT_PUBLIC_COMPANY_NAME=Delonix Travel Services
NEXT_PUBLIC_COMPANY_ADDRESS=Your Company Address
NEXT_PUBLIC_GST_NUMBER=your_gst_number

# Performance Configuration
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_CACHE_DURATION=3600
NEXT_PUBLIC_MAX_SEARCH_RESULTS=100

# Security Configuration
NEXT_PUBLIC_CSP_NONCE=your_csp_nonce_here
NEXT_PUBLIC_HSTS_MAX_AGE=31536000

# Development and Debugging (should be false in production)
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_SHOW_DEBUG_INFO=false 